# ===========================================
# PYRAX Web Environment Configuration
# ===========================================

# Database (PostgreSQL) - Required for admin dashboard, bug reports, presale
# Local: postgresql://postgres:postgres@localhost:5432/pyrax_web
# Cloud: Use Supabase, Neon, or Railway connection string
DATABASE_URL=postgresql://user:password@localhost:5432/pyrax_web

# Redis (for background jobs)
REDIS_URL=redis://localhost:6379

# WalletConnect Project ID (required for wallet connections)
# Get one at https://cloud.walletconnect.com
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# ===========================================
# ETH Mainnet Presale Contract (PRODUCTION)
# ===========================================
# IMPORTANT: Set these for mainnet deployment to collect REAL ETH
NEXT_PUBLIC_PRESALE_CONTRACT=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_PRESALE_CHAIN_ID=1

# Ethereum RPC (Alchemy)
ETH_MAINNET_RPC=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
ETH_SEPOLIA_RPC=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Treasury address (receives presale funds)
PRESALE_TREASURY_ADDRESS=0x0000000000000000000000000000000000000000

# Payment token addresses (ETH Mainnet)
USDC_ADDRESS=0xA0b86991c6218b36c1d19D4a2e9Eb0cE3606eB48
USDT_ADDRESS=0xdAC17F958D2ee523a2206206994597C13D831ec7
WBTC_ADDRESS=0x2260FAC5E5542a773Aa44fBCfeDf7C193bc2C599

# Chainlink Price Feeds (ETH Mainnet)
ETH_USD_FEED=0x5f4eC3Df9cbd43714FE2740f5E3616155c5b8419
BTC_USD_FEED=0xF4030086522a5bEEa4988F8cA5B36dbC97BeE88c

# Indexer API endpoint
NEXT_PUBLIC_INDEXER_API=https://api.pyrax.org

# PYRAX RPC endpoints
NEXT_PUBLIC_PYRAX_RPC_A=https://rpc.pyrax.org
NEXT_PUBLIC_PYRAX_RPC_B=https://rpc-b.pyrax.org

# Explorer URL
NEXT_PUBLIC_EXPLORER_URL=https://explorer.pyrax.org

# Faucet URL
NEXT_PUBLIC_FAUCET_URL=https://faucet.pyrax.org

# CoinGecko API (for live ETH price)
# Get a Pro API key at https://www.coingecko.com/en/api/pricing
# Leave empty to use free tier (rate limited)
COINGECKO_API_KEY=your_coingecko_pro_api_key

# Environment
NODE_ENV=production
